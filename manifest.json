{
  "manifest_version": 2,
  "name": "Simple Mouse Gesture",
  "description": "super simple mouse gesture",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "pop.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/jquery-3.3.1.min.js", "./js/config.js", "./js/myscript.js", "./js/popup.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["./js/background.js"] ,
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "history"
  ],
  "icons" : {
    "128": "icon.png"
  },
  "web_accessible_resources": ["*.js", "*.png"]
}
