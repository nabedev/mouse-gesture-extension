{
  "manifest_version": 2,
  "name": "Simple Mouse Gesture",
  "description": "super simple mouse gesture",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "pop.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/jquery.js", "./js/myscript.js"],
      "run_at": "document_start"
    }
  ],
  // "background": {
  //   "scripts": ["./js/jquery.js", "./js/myscript.js"],
  //   "persistent": true
  // },
  "permissions": [
    "activeTab"
  ],
  "icons" : {
    "128": "icon.png"
  }
}
